{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug fork",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/proxy",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set follow-fork-mode to child",
                    "text": "-gdb-set follow-fork-mode child",
                    "ignoreFailures": true
                },
                {
                    "description": "Disable detach-on-fork",
                    "text": "-gdb-set detach-on-fork off",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
